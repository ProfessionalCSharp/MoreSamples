<Window xmlns:toolkit="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls"  x:Class="XAMLIslandSample.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAMLIslandSample"
        mc:Ignorable="d"
        Title="MapWindow" Height="450" Width="800">
    <Grid>
        <toolkit:MapControl            
            DesiredPitch="20"
            ZoomLevel="14"
            LandmarksVisible="True" 
            TrafficFlowVisible="True" 
            PedestrianFeaturesVisible="True" 
            Loaded="OnLoadedMap"/>
    </Grid>
</Window>
